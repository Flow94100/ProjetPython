<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_inscription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.frozotte.projetpython.InscriptionActivity"
    android:background="@drawable/background">

    <TextView
        android:text="Inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Mail"
        android:ems="10"
        android:id="@+id/txtMail"
        android:layout_below="@+id/txtLog"
        android:layout_alignStart="@+id/txtLog"
        android:layout_marginTop="14dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mdpInscri"
        app:passwordToggleEnabled="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/txtMail"
        android:layout_alignStart="@+id/txtMail"
        android:layout_alignEnd="@+id/txtMail">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:hint="Mot de passe" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnInscri"
        android:text="Inscription"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:layout_alignEnd="@+id/textView"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/mdpInscri"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Login"
        android:ems="10"
        android:id="@+id/txtLog"
        android:layout_marginTop="113dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
